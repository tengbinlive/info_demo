<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/theme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_hint</item>

    </style>

    <style name="AppThemeWTN" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppThemeT" parent="AppTheme">
        <!--Window color-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:outAnimation">@color/transparent</item>
    </style>

    <!--window 窗口背景透明 上下两层不透明-->
    <style name="AppThemeL" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppThemeN" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeTN" parent="AppTheme">
    </style>


    <!-- ProgressDialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--选择按钮-->
    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CheckBoxDrawable" parent="Material.Drawable.CheckBox"/>

    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/inv_act_banner</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">4000</item>

        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">2000</item>

    </style>

    <!--actionbar 左边 menu 动画-->
    <style name="AnimationPreviewLeft">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!--actionbar 右边 menu 动画-->
    <style name="AnimationPreviewRigth">
        <item name="android:windowEnterAnimation">@anim/fade_in_rigth</item>
        <item name="android:windowExitAnimation">@anim/fade_out_rigth</item>
    </style>

    <style name="AnimBottomAlpha" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/share_change_in</item>
        <item name="android:windowExitAnimation">@anim/share_change_out</item>
    </style>

    <!--底部弹出框-->
    <!--动画-->
    <style name="BottomViewTheme_Defalut">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomToTopAnim">
        <item name="android:windowEnterAnimation">@anim/push_translate_in</item>
        <item name="android:windowExitAnimation">@anim/push_translate_out</item>
    </style>

    <!--红色复选框样式-->
    <style name="RedCheckBox">
        <item name="cbd_strokeColor">@color/red</item>
        <item name="cbd_tickColor">@color/white</item>
    </style>

    <!--城市选择-->
    <style name="Item" parent="">
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Item.Tumblr">
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/textcolor_222</item>
    </style>
</resources>
