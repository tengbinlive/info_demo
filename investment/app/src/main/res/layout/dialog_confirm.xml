<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_confirm_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="温馨提示"
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/dialog_confirm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" >
        </View>

        <TextView
                android:id="@+id/dialog_confirm_closeLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@+id/dialog_confirm_point"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:text="YES"
                android:textColor="#1c78e2"
                android:textSize="@dimen/font_small" />

        <View
                android:id="@+id/dialog_confirm_point"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/dialog_confirm_closeLeft"
                android:layout_alignTop="@id/dialog_confirm_closeLeft"
                android:layout_centerInParent="true"
                android:background="#e6e6e6" >
        </View>

        <TextView
                android:id="@+id/dialog_confirm_closeRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/dialog_confirm_point"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:text="NO"
                android:textColor="#1c78e2"
                android:textSize="@dimen/font_small" />
    </RelativeLayout>

</LinearLayout>