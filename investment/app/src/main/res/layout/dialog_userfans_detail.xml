<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <LinearLayout android:layout_width="150dp"
                  android:orientation="vertical"
                  android:layout_marginRight="@dimen/content_gap_small"
                  android:layout_alignParentRight="true"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/inv_info_up_arrow"
                   android:scaleType="centerInside"
                   android:layout_gravity="right"
                   android:layout_marginRight="@dimen/content_10dp"
                   android:layout_height="wrap_content"/>


        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:background="@drawable/inv_info_down_bg"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:text="@string/investment_info"
                      android:id="@+id/info"
                      android:textSize="@dimen/font_medium"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:paddingTop="@dimen/content_10dp"
                      android:paddingBottom="@dimen/content_10dp"
                      android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                  android:background="@drawable/line_white"
                  android:layout_height="@dimen/content_1px"/>
            <TextView android:layout_width="match_parent"
                      android:text="@string/investment_act"
                      android:id="@+id/act"
                      android:textSize="@dimen/font_medium"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:paddingTop="@dimen/content_10dp"
                      android:paddingBottom="@dimen/content_10dp"
                      android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                  android:background="@drawable/line_white"
                  android:layout_height="@dimen/content_1px"/>

            <TextView android:layout_width="match_parent"
                      android:text="@string/investment_offer"
                      android:id="@+id/offer"
                      android:textSize="@dimen/font_medium"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:paddingTop="@dimen/content_10dp"
                      android:gravity="center"
                      android:paddingBottom="@dimen/content_10dp"
                      android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>